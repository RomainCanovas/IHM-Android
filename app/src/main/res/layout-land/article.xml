<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="@string/title"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_marginStart="10dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:background="@drawable/edtiborder"
        android:layout_alignTop="@+id/title"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/title" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        android:text="@string/desc"
        android:textSize="17dp"
        android:layout_below="@+id/author"
        android:layout_alignStart="@+id/author" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/price"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/desc"
        android:layout_alignStart="@+id/desc" />

    <TextView
        android:id="@+id/stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stock"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignStart="@+id/price" />

    <CheckBox
        android:id="@+id/wishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimary"
        android:text="@string/addWishlist"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:layout_alignStart="@+id/imageButton"
        android:text="@string/category" />

    <TextView
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/price"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/space"
        android:text="@string/pricepromo" />

    <TextView
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   "
        android:layout_toEndOf="@+id/price" />

    <TextView
        android:id="@+id/promo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/price2"
        android:layout_alignStart="@+id/price"
        android:text="@string/promo"
        android:textSize="20dp"
        android:layout_marginBottom="2dp"
        android:textColor="@color/colorPromo"/>


    <TextView
        android:id="@+id/news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D40D12"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="@string/nouveaute"
        android:layout_above="@+id/imageButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>